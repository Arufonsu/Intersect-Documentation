{
	"plugins": {
		"@textlint/markdown": {
			"extensions": [".md", ".mdx"]
		}
	},
	"rules": {
		"spelling": {
			"language": "it",
			"skipPatterns": [
				"DBSet",
				"DLL",
				"GameContext",
				"GameData",
				"JSON",
				"NoFody",
				"NuGet",
				"PlayerContext",
				"PlayerData",
				"PowerJson",
				"SQLite"
			],
			"suggestCorrections": true
		}
	}
}
